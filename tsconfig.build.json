{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./functions/dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "functions/dist",
    "**/*.spec.ts"
  ]
}
